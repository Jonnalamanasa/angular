{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aspname": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "S1",
                "P1V1",
                "P2V2"
                             ],
            "metadata": {
                "description": "description"
            }
        },
        "webappname": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
      {
          "name": "[parameters('aspname')]",
          "type": "Microsoft.Web/serverfarms",
          "apiVersion": "2020-12-01",
          "location": "[resourceGroup().location]",
          "sku": {
              "name": "[parameters('sku')]",
              "capacity": 1
          },
          "tags": {
              "displayName": "[parameters('aspname')]"
          },
          "properties": {
              "name": "[parameters('aspname')]"
          }
      },
      {
          "name": "[concat(parameters('webappname'),copyIndex(5))]",
          "type": "Microsoft.Web/sites",
          "apiVersion": "2020-12-01",
          "location": "[resourceGroup().location]",
          "tags": {
              "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/appServicePlan1')]": "Resource",
              "displayName": "[parameters('webappname')]"
          },
          "dependsOn": [
              "[resourceId('Microsoft.Web/serverfarms', parameters('aspname'))]"
          ],
          "properties": {
              "name": "[concat(parameters('webappname'),copyIndex(5))]",
              "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('aspname'))]"
          },
          "copy": {
              "name": "wappcopy",
              "count": 1
          }
      }
    ],
    "outputs": {}
}